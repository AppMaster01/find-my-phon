<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_230sdp"
    android:background="@drawable/color"
    android:padding="2dp">

    <TextView
        android:id="@+id/native_ad_attribution_small"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:background="@drawable/small_backgrund"
        android:gravity="center"
        android:text="AD"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.nativead.MediaView
        android:id="@+id/native_ad_media"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="110dp"
        android:layout_marginLeft="@dimen/_20sdp"


        android:layout_marginTop="@dimen/_63sdp">

    </com.google.android.gms.ads.nativead.MediaView>


    <ImageView
        android:id="@+id/native_ad_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:scaleType="fitXY"
        tools:background="#EDEDED" />


    <TextView
        android:id="@+id/native_ad_headline"
        android:layout_width="133dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_45sdp"
        android:textColor="#3A1808"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="QuickLoan" />

    <RatingBar
        android:id="@+id/native_ad_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_45sdp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5" />


    <TextView
        android:id="@+id/native_ad_body"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#828282"
        android:textSize="14sp"
        tools:text="FREE Google Play" />


    <TextView
        android:id="@+id/native_ad_advertiser"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="#000000"
        android:textSize="13dp"
        tools:text="THE LIMITED PHONE TRACKER APPLICATION - DONâ€™T MISS OUT
" />

    <Button
        android:id="@+id/native_ad_button"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_68sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:background="@drawable/background"
        android:elevation="@dimen/_20sdp"
        android:text="Install"
        android:textAllCaps="true"
        android:textColor="#351907"
        android:textSize="@dimen/_12sdp" />


</com.google.android.gms.ads.nativead.NativeAdView>